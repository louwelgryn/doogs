<div class= "message <%= user_is_messages_author ? "right" : "" %>">
  <div class="englobing">
  <div class="message-styling">
    <div class="message-content" ><%= message.content %></div>

  <div class="emoji-container">
    <% if message.get_upvotes.size == 0 && message.get_downvotes.size == 0 %>
      <div class="votes-container">
        <div class="icons-vote">
            <i class="fas fa-smile-beam icons-details icons">  </i>
            <i class="fas fa-plus icons-details plus-sign icons"></i>
        </div>
        <div class="icons-filled">
         <div class="positive"> <p class= "emoji"> <%= link_to like_chat_room_message_path(chat_room_id: message.chat_room.id,id: message.id),  remote: true, method: :put do %> 😍 <% end %>  </p>
           <p class="upvote"> <%= message.get_upvotes.size %></p></div>
          <div class="negative"><p class= "emoji"> <%= link_to  dislike_chat_room_message_path(chat_room_id: message.chat_room.id,id: message.id), remote: true, method: :put do %> 😡 <% end %> </p>
          <p class="downvote"><%= message.get_downvotes.size %></div></p>
        </div>
      </div>
    <% else %>
        <!-- <div class="when-value"> -->
      <div class="flex">
        <div class="positive"><p class= "emoji"> <%= link_to like_chat_room_message_path(chat_room_id: message.chat_room.id,id: message.id), remote: true, method: :put do %> 😍 <% end %> </p>
        <p class="upvote"><%= message.get_upvotes.size %></p></div>
        <div class="negative"><p class= "emoji"> <%= link_to  dislike_chat_room_message_path(chat_room_id: message.chat_room.id,id: message.id), remote: true, method: :put do %> 😡 <% end %> </p>
          <p class="downvote"> <%= message.get_downvotes.size %></p>
        </div>
    <!--   </div> -->
      </div>
    <% end %>
  </div>


  </div>
  <% if message.user.image_url%>
    <%= cl_image_tag(message.user.image, width: 120, height: 120, gravity: :face, crop: :thumb, class: "avatar") %>
  <% end %>
  </div>
</div>
