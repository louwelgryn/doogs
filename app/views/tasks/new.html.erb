<div class="container">

  <%= simple_form_for [@project, @task] do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="form-inputs">
      <%= f.input :name %>
    </div>
    <div class="form-inputs">
      <%= f.input :description %>
    </div>
    <div class="form-inputs">
      <%= f.input :priority_level, collection: Task::PRIORITY_LEVEL %>
    </div>
    <div class="form-inputs">
      <%= f.input :user_id, collection: @volunteers %>
    </div>
    <div class="form-actions">
      <%= f.submit "Créer la tâche", class: "btn btn-primary" %>
    </div>
  <% end %>

</div>
