<div class="project-cards">
  <div class="project-task-card border-top border-bottom">
    <%= cl_image_tag(task.user.image, width: 120, height: 120, gravity: :face, crop: :thumb, class: "avatar avatar-new") %>
    <div class="project-task-bandeau">
      <div class="colored-info">
        <% if task.priority_level == "Normale" %>
          <p class="task-status btn-yellow btn-basic top-left"> <%= task.priority_level%></p>
        <% elsif task.priority_level == "Prioritaire" %>
          <p class="task-status btn-red btn-basic top-left"> <%= task.priority_level%></p>
        <% else %>
          <p class="task-status btn-orange btn-basic top-left"> <%= task.priority_level%></p>
        <% end %>
        <p class="task-end btn-basic btn-calendar"><i class="far fa-clock task-clock"></i> <%= task.end_date.strftime('%d %b') %></p>
      </div>
      <p class="project-task-name"><%= task.name %></p>
    </div>
    <% if task.status == "A faire" && ((current_user == task.user) || @manager) %>
      <form class="simple_form edit_task" id="edit_task_4" novalidate="novalidate" action="/projects/2/tasks/4" accept-charset="UTF-8" method="post">
        <input name="utf8" type="hidden" value="✓">
        <input type="hidden" name="_method" value="patch">
        <input type="hidden" name="authenticity_token" value="XfqhSirS6geX3gSec/bcQiCZtZFHU3z9/ewrZwtXGO7Uj4V1QswJdOAOp0qz8FPKYalHktRIxS7lPypnrR4+5g==">
        <button type="submit" name="commit" value="" class="muf" data-disable-with="">
          <i class="fas fa-check-circle"></i>
        </button>
      </form>
    <% end %>
    <%= link_to '' , status_update_path(task), hidden: true, remote: true %>
  </div>
</div>


