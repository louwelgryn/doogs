
<div class="project-cards" >
  <!-- <div class="project-card-small"> -->
    <div class="project-task-card border-top border-bottom">
<p class=""> <%= cl_image_tag task.user.image,:transformation=>[{:width=>800, :height=>800, :gravity=>"face", :crop=>"crop"}], class: "avatar avatar-new", style:"margin: 0;" %> </p>
          <div class="colored-info">
        <% if task.priority_level == "Normale" %>
        <p class="task-status btn-yellow btn-basic top-left" > <%= task.priority_level%></p>
        <% elsif task.priority_level == "Prioritaire" %>
        <p class="task-status btn-red btn-basic top-left" > <%= task.priority_level%></p>
        <% else %>
        <p class="task-status btn-orange btn-basic top-left" > <%= task.priority_level%></p>
        <% end %>
        <p class="task-end btn-basic btn-calendar"><i class="far fa-clock">  </i>  <%= task.end_date.strftime('%d %b') %></p>
        </div>
        <div class="project-task-informations">
         <%= task.name %> <% if task.status == "A faire" && ((current_user == task.user) || @manager) %>

      <% end %>
      </div>
          <p class="task-owner"> <%= simple_form_for [@project, task] do |f| %>
            <%= f.submit "", class: "task-owner" %>
          <% end %> </p>


       <%= link_to '' , status_update_path(task), hidden: true, remote: true %>
    </div>
 <!--  </div> -->
</div>


