 <div class="project-cards">
      <% @project.tasks.each do |task| %>
        <div class="project-card col-6">
          <div class="project-task-card">
            <%= task.name %>
            <div class="project-task-informations">
                <% if task.priority_level == "Normale" %>
                <p class="task-status btn-yellow btn-basic top-left"> <%= task.priority_level%></p>
              <% elsif task.priority_level == "Prioritaire" %>
                <p class="task-status btn-orange btn-basic top-left"> <%= task.priority_level%></p>
                <% else %>
                <p class="task-status btn-red btn-basic top-left"> <%= task.priority_level%></p>
              <% end %>

                <p class="task-description"><%= task.description %></p>
                <div class="project-task-date">
                  <p class="task-owner"> <%= cl_image_tag task.user.image,:transformation=>[{:width=>800, :height=>800, :gravity=>"face", :crop=>"crop"}], class: "avatar", style:"margin: 0;" %> </p>
                <p class="task-end btn-basic btn-calendar"><i class="far fa-clock">  </i>  <%= task.end_date.strftime('%d %b') %></p>
                </div>
              </div>
                <% if task.status == "A faire" && ((current_user == task.user) || @manager) %>
                  <%= simple_form_for [@project, task] do |f| %>
                    <%= f.submit "Marquer comme achevÃ©e", class: "btn-black finished" %>
                  <% end %>
                <% end %>
            </div>
          </div>
          <% end %>
        </div>
