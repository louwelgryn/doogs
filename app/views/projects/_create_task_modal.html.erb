<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style='z-index: 50000;'>
  <div class="modal-dialog modal-dialog-scrollable" role="document">
    <div class="modal-content modal-content-custom">
      <div class="modal-header modal-header-custom">
        <h5 class="modal-title form-title-task" id="exampleModalLabel">Nouvelle tâche - Normale</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container">

          <%= simple_form_for [@project, @task] do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
          <div class="form-inputs">
            <%= f.input :name, placeholder: "Nom", label: false, input_html: { class: "form-case "} %>
          </div>
          <div class="form-inputs">
            <%= f.input :description, placeholder: "Description", label: false, input_html: { class: "form-case "} %>
          </div>
          <div class="form-inputs">
            <%= f.hidden_field :priority_level, value: "Normale" %>
          </div>
          <p class='form-label'>Deadline:</p>
          <div class="form-inputs">
            <%= f.input :end_date, label: false %>
          </div>
          <p class='form-label'>Sélectionner un membre de l'équipe:</p>

          <div class="participants-selection">
            <% @project.users.each do |user| %>
              <span class="task-user-button avatar-participation"><%= user.id %>
              <%= cl_image_tag user.image, crop: :fill, width: 100, gravity: :auto, radius: "max", aspect_ratio: "1:1", class:"avatar" %>
              </span>
              <% end %>
          </div>
          <%= f.hidden_field :user_id, input_html:{id: 'user_task_normale'} %>


          <div class="form-actions form-button">
            <%= f.submit "Créer la tâche", class: "btn-black" %>
          </div>
          <% end %>

        </div>

      </div>
    </div>
  </div>
</div>

