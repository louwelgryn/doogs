
<h1><%= @project.name %></h1>
<p><%= @project.description %></p>
<p class="btn btn-warning"><%= @project.status %></p> <br>

<p> <%= @project.status %> </p>
<% if @project.status = "on going" %>
  <% if @project.users.include? current_user %>
    <%= link_to "Dashboard du projet", project_dashboard_path(@project) %>
  <% end %>
<% end %>

Un projet de <strong><%= @project.charity.name %></strong>
<br>
<hr>

<!-- join a project -->
<h4>Liste des compétences nécessaires : </h4>
<ul class="d-flex">
<% @project.commitments.each do |commitment| %>
<li class="d-inline">
 <% if commitment.user.nil? %>
  <div class="empty-avatar"><%= commitment.skill.name %></div>
 <%= simple_form_for(commitment) do |f| %>
    <%= f.input :user_id, as: :hidden, input_html: {value: current_user.id} %>
    <%= f.submit "Devenir bénévole", class: "btn btn-primary" %>
  <% end %>

  <% else %>
   <%= commitment.user.name %>
   <%= cl_image_tag commitment.user.name, crop: :fill, width: 1000, gravity: :auto, radius: "max", aspect_ratio: "1:1"%>
<% end %>

 </li>
<% end %>
</ul>

