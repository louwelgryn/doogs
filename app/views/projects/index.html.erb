<div class="container">

  <h1>Here are the different project</h1>

  <div class="row">
        <% @projects.each do |project| %>
          <div class="col-4">
            <div class="card">

              <div class="card-photo-container">
                <div class="card-photo"  style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path project.image %>);">>
                    <%#= cl_image_tag project.image, height: 300, width: 400  %>
                </div>

                <div class="middle">
                  <span class="button-default turquoise"><%= link_to 'En savoir +', project_path(project) %></span>
                </div>
              </div>

              <div class="card-info">
                <h3><%= project.charity.name %></h3>
                <h4><%= link_to project.name, project_path(project) %></h4>
                <p><%= project.description %></p>
              </div>

              <div class="card-info-footer">
                <p><%= project.development_goal %></p>
                <div class="box-right">
                  <h5><%= project.status %></h5>
                </div>

              </div>

            </div>
          </div>
        <% end %>
      </div>
    </div>
</div>
