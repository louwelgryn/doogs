    <%= image_tag "DOOG.1.png" %>
  <% end %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <%= link_to 'Les projets', projects_path, class: "btn-black", id: "btn-navbar" %>
    <% if user_signed_in? %>
