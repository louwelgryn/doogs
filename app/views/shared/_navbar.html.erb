      <% end %>

      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        <span><i class="fas fa-user"></i> <%= current_user.name %></span>
        <%= link_to dashboard_path, class: "nav-link" do %>
          <div id="navbar-flexbox">
            <span>
              Mon tableau de bord
            </span>
          </div>
        <% end %>
        <%= link_to "Se dÃ©connecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
