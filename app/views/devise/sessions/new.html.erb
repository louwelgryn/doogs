<div class="homepage indexpage">
  <div class="green-banner">

    <%= image_tag 'Vectorvector.svg', class: "wave wave-index" %>

    <div class="container">

      <h1>Se connecter</h2>

      <%= render "devise/shared/links" %>

      <br>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      label: 'Votre email'%>
          <%= f.input :password,
                      required: false,
                      label: 'Votre mot de passe'%>
          <%= f.input :remember_me, label: 'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Connexion", class: "btn-black" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
